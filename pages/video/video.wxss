/* pages/video/video.wxss */
.page-body-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.video-top{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.video-top-text{
  color: #999999;
  font-size: 35rpx;
}
.img-wrap{
  width: 330rpx;
  height:566rpx;
  margin-top: 15rpx;
  position: relative;
}
.imgif{
  width: 100%;
  height:100%;
}
.imgpng{
  width: 168rpx;
  height: 80rpx;
  position: absolute;
  top: 80rpx;
  left: -80rpx;
}
.video-bottom{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.video-bottom-text{
  color: #000;
  font-size: 40rpx;
  font-weight: bold;
}
.video-bottom-blue{
  color: #3A70DD;
  font-size: 40rpx;
  font-weight: bold;
}
.image-plus-text{
  width: 80%;
  height: 100rpx;
  background-color: rgb(58, 112, 221);
  border-radius: 10rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 180rpx;
}
.text-hint{
  background-color: #9c9797;
}
.submit-video{
  position: fixed;
  bottom: 50rpx;
}
.video-wrap{
  margin-top: 200rpx;
}
