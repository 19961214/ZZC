/* pages/signMessage/signMessage.wxss */

page {
  /* height: 100%; */
  background-color: #F4F4F4;
  height: 100%;
  overflow: hidden;
}

.wrap {
  width: 100%;
  height: 100%;
  position: relative;
  /* padding-bottom: 50rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

#sign-head {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.sign-head-left {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #ddd;
}

.cur {
  color: #3959d5;
  font-weight: 600;
}

.sign-head-right {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}



.false-content{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -50%;
}
.false-img{
  width: 200rpx;
  height: 200rpx;
}
.false-text{
  color: rgb(182, 182, 183);
  margin-top: 20rpx;
}



.sign-card-wrap {
  width: 100%;
  margin-top: 120rpx;
  padding-bottom: 60rpx;
  /* display: flex;
  flex-direction: column;
  align-items: center; */
}

.sign-card {
  width: 90%;
  background-color: #fff;
  box-shadow: #b7c8ef 5rpx 5rpx 10rpx 5rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  
}

.sign-card-top {
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 20rpx;
}

.card-top-text {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}

.card-top-text1 {
  color: #999;
  /* white-space: nowrap; */
}

.card-top-text2 {
  color: #333;
  font-size: 33rpx;
  font-weight: 600;
}
.sign-card-bottom{
  width: 100%;
  padding: 30rpx;
  display: flex;
}
.card-bottom-text{
  width: 70%;
  display: flex;
  flex-direction: column;
}
.card-bottom-text1{
  color: #999999;
}
.card-bottom-text2{
  color: #999999;
  margin-top: 20rpx;
}
.sign-card-btn{
  width: 30%;
  display: flex;
  align-items: center;
}
.card-btn{
  width: 100%;
  height: 70rpx;
  font-size: 25rpx;
  background-color: #3959D5;
  color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-img-wrap{
  width: 80%;
  height: 100%;
  border: 1rpx dashed #999;
  margin-left: 20%;
}
.sign-card-img{
  width: 100%;
  height: 100%;
}