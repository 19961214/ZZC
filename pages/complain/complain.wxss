/* pages/complain/complain.wxss */
page {
  height: 100%;
  background-color: #fff;
}

.wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.complainTop{
  width: 100%;
}
.complainTop-title{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.line{
  width: 7%;
  height: 3rpx;
  background-color: rgb(239, 239, 239);
}
.title{
  color: rgb(130, 130, 130);
  margin: 0 10rpx;
}
.complainTop-content{
  width: 100%;
  border-bottom: 2rpx solid rgb(239, 239, 239)
}
.complainTop-item{
  display: inline-block;
  margin: 15rpx;
  color: rgb(209, 209, 209);
  border: 1rpx solid rgb(209, 209, 209);
  padding: 6rpx;
}
.complainTop-item-hint{
  color: #0D65E3;
  border: 1rpx solid #0D65E3;
  font-weight: bold;
}
.complainBottom{
  width: 95%;
  background-color: rgb(248, 248, 248);
  margin-top: 30rpx;
  /* display: flex;
  align-items: center; */
  padding: 10rpx 90rpx;
  position: relative;
}
.complainBottom-hint{
  width: 80rpx;
  color: rgb(225, 178, 130);
  font-size: 25rpx;
  position: absolute;
  top: 10rpx;
  left: 15rpx;
}
.complainBottom-hint2{
  color: rgb(209, 209, 209);
  position: absolute;
  right: 15rpx;
  bottom: 10rpx;
}
.complainBottom-ipt{
  width: 100%;
  height: 200rpx;
}
.btn-wrap{
  position: fixed;
  bottom: 30rpx;
  width: 90%;
  
}
.btn{
  width: 100%;
  color: #fff;
  background: rgb(239, 239, 239);
  /* background-color: #0D65E3; */
}
.btn2{
  background-color: #0D65E3;
}
.photo-content{
  width: 100%;
  padding: 50rpx 20rpx;
  /* display: flex; */
}
.camera{
  width: 155rpx;
  height: 155rpx;
  border: 2rpx dashed #ccc;
  display: inline-block;
  margin-left: 30rpx;
  position: relative;
}
.camera-img{
  width: 150rpx;
  height: 150rpx;
}
.cancel{
  width: 50rpx;
  height: 50rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #ccc;
  position: absolute;
  top: -18rpx;
  right: -18rpx;
}
.camera-text-wrap{
  width: 155rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.camera-text{
  color: #ccc;
  font-size: 25rpx;
}