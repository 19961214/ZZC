/* pages/problem/problem.wxss */
page {
  height: 100%;
  background-color: #ececee;
}

.wrap {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.problem-top{
  width: 100%;
  color: rgba(153, 153, 153);
  font-size: 25rpx;
  margin-bottom: 10rpx;
}
.query{
  margin-bottom: 2rpx;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  padding: 10rpx;
  position: relative;
  
}
.queryText{
  position: absolute;
  top: -10rpx;
  left: 15rpx;
}
.overstriking{
  font-weight: bold;
}
.img{
  width: 14rpx;
  height: 24rpx;
  float: right;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}
.rotate{
  transform:rotate(90deg);
}
.answer{
  width: 100%;
  padding: 10rpx;
  background-color: #fff;
}
.answerText{
  display: inline-block;
  color: rgba(153, 153, 153);
  font-size: 25rpx;
}
.problem-bottom{
  position: fixed;
  bottom: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.problem-bottom-text1{
  color: #868686;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.problem-bottom-text2{
  color: #ccc;
  font-size: 27rpx;
}
